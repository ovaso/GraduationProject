<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.InfoActivity">

        <TextView
            android:id="@+id/hint_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESIGNED BY OVASO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hint_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Me On Github"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/msg_vertical_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hint_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>